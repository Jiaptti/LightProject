<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.viroyal.light.module.dao.user.SysRoleMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.viroyal.light.module.entity.user.SysRole">
		<result column="id" property="id" />
		<result column="name" property="name" />
		<result column="type" property="type" />
	</resultMap>

	<select id="getRoleListById" parameterType="Long" resultType="com.viroyal.light.module.entity.user.SysRole">
		select r.type from sys_role as r
		LEFT JOIN sys_user_role as ur on ur.rid = r.id
		where ur.uid = #{id}
	</select>


	<select id="getUserRoleName" parameterType="Long" resultType="string">
		select r.name from sys_role as r
		LEFT JOIN sys_user_role as ur on ur.rid = r.id
		where ur.uid = #{id}
	</select>

</mapper>
