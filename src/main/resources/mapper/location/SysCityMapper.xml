<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.viroyal.light.module.location.dao.SysCityMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.viroyal.light.module.location.entity.SysCity">
		<id column="id" property="id" />
		<result column="city_name" property="cityName" />
	</resultMap>


	<select id="queryAll" resultMap="BaseResultMap">
		select * from sys_city
	</select>



	<insert id="save" parameterType="com.viroyal.light.module.location.entity.SysCity"
			useGeneratedKeys="true" keyProperty="id">
		insert into sys_city
		(
		`id`,
		`city_name`
		)
		values
		(
		#{id},
		#{cityName}
		)
	</insert>


	<update id="update" parameterType="com.viroyal.light.module.location.entity.SysCity">
		update sys_city
		<set>
			<if test="cityName != null">`city_name` = #{cityName}</if>
		</set>
		where id = #{id}
	</update>

	<delete id="deleteBatch">
		delete from sys_city where id in
		<foreach item="cityId" collection="array" open="(" separator="," close=")">
			#{cityId}
		</foreach>
	</delete>

</mapper>
