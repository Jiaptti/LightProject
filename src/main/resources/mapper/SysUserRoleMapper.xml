<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.viroyal.light.module.dao.user.SysUserRoleMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.viroyal.light.module.entity.user.SysUserRole">
		<id column="id" property="id" />
		<result column="uid" property="uid" />
		<result column="rid" property="rid" />
	</resultMap>


	<!-- 查询用户创建的角色ID列表 -->
	<select id="queryRoleIdList" resultType="com.viroyal.light.module.entity.user.SysUserRole">
		select rid from sys_user_role where uid = #{userId}
	</select>

	<update id="updateByUserId" parameterType="com.viroyal.light.module.entity.user.SysUserRole">
		update sys_user_role set sys_user_role.rid = #{rid} where sys_user_role.uid = #{uid}
	</update>
</mapper>
