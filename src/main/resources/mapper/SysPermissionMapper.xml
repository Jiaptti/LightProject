<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.viroyal.light.module.dao.user.SysPermissionMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.viroyal.light.module.entity.user.SysPermission">
		<id column="id" property="id" />
		<result column="url" property="url" />
		<result column="name" property="name" />
	</resultMap>

	<select id="getUserPermissions" parameterType="Integer" resultType="com.viroyal.light.module.entity.user.SysPermission">
		select p.name from sys_permission as p, sys_role_permission as rp
		 where rp.rid in (select ur.rid from sys_user as u, sys_user_role as ur where u.id = #{id})
	</select>
</mapper>
